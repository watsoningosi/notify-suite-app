<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/montserrat"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:text="Personalise Your Notes And Contacts"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivCreate"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:contentDescription="add contacts"
            app:srcCompat="@drawable/addcontact"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="70dp"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:contentDescription="contacts"
            app:srcCompat="@drawable/people"
            tools:ignore="DuplicateIds"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="Add A Contact"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal"
            android:text="View Contacts"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAddNotes"
                android:layout_width="70dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:contentDescription="add Notes"
                app:srcCompat="@drawable/addnotes" />

            <ImageView
                android:id="@+id/ivViewNotes"
                android:layout_width="70dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="#FF9800"
                android:contentDescription="view Notes"
                app:srcCompat="@drawable/notes" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_horizontal"
                android:text="Add Notes"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_horizontal"
                android:text="View Notes"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>